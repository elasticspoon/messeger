<div>
  <div id="message-display">
    <% @messages.each do |message| %>
      <article class="message">
        <div class="message-header">
          <%= message.user.email %>
          <%= message.created_at %>
        </div>
        <div class="message-body">
          <%= message.body %>
        </div>
      </article>
    <% end %>
  </div>
  <div id="message-form">
    <%= form_with model: @message, local: false do |form| %>
      <div class="field has-addons">
        <div class="control">
          <%= form.text_field :body, id: 'message-input', class: 'input' %>
        </div>
        <div class="control">
          <%= form.submit 'Send Message', class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
